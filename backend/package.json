{
    "name": "job-tracker-backend",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev:studio": "prisma studio --port 5555 --browser none",
        "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:studio\"",
        "build": "tsc",
        "start": "node dist/index.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate deploy",
        "prisma:migrate:dev": "prisma migrate dev",
        "prisma:studio": "prisma studio --port 5555 --browser none",
        "prisma:seed": "tsx prisma/seed.ts",
        "codegen": "graphql-codegen --config src/codegen.ts",
        "codegen:watch": "graphql-codegen --config src/codegen.ts --watch"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@apollo/server": "^5.0.2",
        "@prisma/client": "6.18.0",
        "graphql": "^16.9.0",
        "graphql-tag": "^2.12.6"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^6.0.1",
        "@graphql-codegen/typescript": "^5.0.2",
        "@graphql-codegen/typescript-resolvers": "^5.1.0",
        "@types/node": "^22.10.1",
        "concurrently": "^9.2.1",
        "prisma": "^6.1.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    }
}